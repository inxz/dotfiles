##### Variables #####
export EDITOR=vim

##### Aliases #####
alias rgrep='grep -n -r'
alias ll='ls -la'

##### PATH (always starts with path separator ":") #####
PATH+=":$HOME/bin"

##### git integration #####
source ~/.git-status.sh
export GITPATHFILTER=''

##### Prompt #####
export PS1='\[\e]0;\w\a\]\n\[\e[32m\]\u@\h \[\e[33m\]\w\[\e[0m\]$(__git_status)\n\$ '

##### Jump #####
source ~/.jump.sh
